{
    "tasks": [
        {
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "g++",
            "args": [
                "-g",
                "${file}",
				"-Winvalid-pch",
				// "-H",
				// "-fexec-charset=UTF-8",
				// "-O2",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++23",
				"-DLOCAL"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}